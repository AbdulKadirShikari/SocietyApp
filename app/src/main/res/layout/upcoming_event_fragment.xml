<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/tvtitleId"
                android:textSize="16dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 PM"
                android:id="@+id/tvtimeId"
                android:textSize="14dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-20-20 "
                android:layout_marginLeft="5dp"
                android:id="@+id/tvDateId"
                android:textSize="14dp"></TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#DDD7D7"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discription"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:id="@+id/tvdiscriptionId"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            app:cardCornerRadius="9dp">
            <ImageView
                android:id="@+id/imgeventId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/society"
                android:scaleType="fitXY"></ImageView>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="pay Now"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/size"
            android:id="@+id/btnPayId"></Button>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD7D7"
        android:layout_marginTop="10dp"></View>


</LinearLayout>