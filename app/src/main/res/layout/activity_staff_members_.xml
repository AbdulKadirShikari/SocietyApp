<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Staff_members_Activity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/stafflinearlayoutId">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="3dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/userimagestaffId"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name -"
                    android:padding="2dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:id="@+id/tvmemberNameId"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:padding="2dp"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/tvmemberNameId"
                    android:layout_margin="4dp"
                    android:id="@+id/tvstaffmemberNameId"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EBE7E7"
                    android:layout_below="@+id/tvmemberNameId"
                    android:id="@+id/firstViewId"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat-No -"
                    android:textSize="16dp"
                    android:padding="2dp"
                    android:layout_below="@+id/firstViewId"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:id="@+id/tvmemberflatId"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat_no"
                    android:textSize="14dp"
                    android:padding="2dp"
                    android:layout_below="@+id/firstViewId"
                    android:layout_toRightOf="@+id/tvmemberflatId"
                    android:layout_margin="4dp"
                    android:id="@+id/tvstaffmemberflatId"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EBE7E7"
                    android:layout_below="@+id/tvmemberflatId"
                    android:id="@+id/secondViewId"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile-No -"
                    android:textSize="16dp"
                    android:padding="2dp"
                    android:layout_below="@+id/secondViewId"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:id="@+id/tvmembernumberId"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserMobileno"
                    android:padding="2dp"
                    android:layout_toRightOf="@+id/tvmembernumberId"
                    android:layout_below="@+id/secondViewId"
                    android:textSize="14dp"
                    android:layout_margin="4dp"
                    android:id="@+id/tvstaffmembernumberId"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EBE7E7"
                    android:layout_below="@+id/tvmembernumberId"
                    android:id="@+id/thirdViewId"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service-No -"
                    android:padding="2dp"
                    android:textSize="16dp"
                    android:layout_below="@+id/thirdViewId"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:id="@+id/tvmemberserviceId"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Userservice"
                    android:padding="2dp"
                    android:textSize="14dp"
                    android:layout_below="@+id/thirdViewId"
                    android:layout_toRightOf="@+id/tvmemberserviceId"
                    android:layout_margin="4dp"
                    android:id="@+id/tvmemberServiceNameId"/>

            </RelativeLayout>
        </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/submit_btn_design"
                    android:gravity="center"
                    android:id="@+id/rlmakecallId"
                    android:clickable="true"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/stafflinearlayoutId">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_callbutton"
                        android:id="@+id/imagecallviewId"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make Call To Person"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:layout_toRightOf="@+id/imagecallviewId"
                        android:id="@+id/staffmembercallId"
                        android:textAlignment="center"
                        android:layout_marginLeft="15dp"
                        android:textSize="14dp"></TextView>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


</RelativeLayout>