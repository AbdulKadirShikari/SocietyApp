<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@drawable/shap"
        android:padding="5dp"
        android:defaultFocusHighlightEnabled="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="month"
            android:padding="5dp"
            android:id="@+id/monthId"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Details"
            android:layout_marginTop="5dp"
            android:onClick="ShowDetails"
            android:id="@+id/showAlldetailsID"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:textSize="13dp"
            android:textColor="#2C5AE6"
            android:textStyle="bold"
            android:layout_marginRight="85dp"></TextView>

        <View
            android:layout_width="78dp"
            android:layout_height="1dp"
            android:background="#2C5AE6"
            android:layout_below="@+id/showAlldetailsID"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="end"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="43dp"
            android:background="#DDDDDD"
            android:id="@+id/viewsecondId"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="15dp"></View>

            <LinearLayout
                android:layout_width="120dp"
                android:orientation="vertical"
                android:id="@+id/linearfirstId"
                android:layout_below="@+id/viewsecondId"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount -:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/btnpId"
                    android:text="15"></TextView>

            </LinearLayout>
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="pay Now"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/viewsecondId"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="11dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/size"
                android:id="@+id/btnPayId"></Button>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearfirstId"
            android:padding="5dp"
            android:id="@+id/textDateId"
            android:layout_marginLeft="5dp"
            android:text=" Due Date -:"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/textDateId"
            android:layout_below="@+id/linearfirstId"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/DateId"
            android:layout_marginLeft="5dp"
            ></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>